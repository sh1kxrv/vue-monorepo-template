{
  "name": "monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 turbo build",
    "build:analyze": "turbo build:analyze",
    "build:app": "pnpm -F @mono/anyproj run build",
    "postinstall": "pnpm -r run stub --if-present",
    "preinstall": "npx only-allow pnpm",
    "clean": "node ./scripts/clean.mjs",
    "dev": "turbo-run dev",
    "dev:app": "pnpm -F @mono/anyproj run dev"
  },
  "devDependencies": {
    "ts-plugin-sort-import-suggestions": "1.0.4",
    "@mono/eslint-config": "workspace:*",
    "@mono/prettier-config": "workspace:*",
    "@mono/tailwind-config": "workspace:*",
    "@mono/tsconfig": "workspace:*",
    "@mono/turbo-run": "workspace:*",
    "@mono/vite-config": "workspace:*",
    "@types/node": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "oxlint": "catalog:",
    "rimraf": "catalog:",
    "tailwindcss": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:"
  },
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=9.12.0"
  },
  "packageManager": "pnpm@10.10.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "*"
      }
    },
    "overrides": {
      "@ast-grep/napi": "catalog:",
      "esbuild": "0.25.3",
      "pinia": "catalog:",
      "vue": "catalog:"
    },
    "neverBuiltDependencies": [
      "node-gyp"
    ]
  }
}
